{
  "name": "ibmcloud-travis-eslint-prettier-config",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "lint": "eslint \"**/*.js\" --fix",
    "format": "prettier --write \"**/*.+(js|graphql|yml|yaml|json)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "**/*.js|graphql|yml|yaml|)": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^1.16.4"
  }
}
